<div class="container mt-5">
<h1 class="form-group text-center">コメント一覧</h1>
<table class="table mt-3">
  <tr>
    <th class="col-2">名前</th>
    <th class="col-8">コメント</th>
    <th class="col-1"></th>
    <th class="col-1"></th>
  </tr>
<% @comments.each do |comment| %>
  <tr>
    <td class="col-2"><%= comment.player.last_name + comment.player.first_name %></td>
    <td class="col-8"><%= comment.thought %></td>
    <td class="col-1"><%= comment.created_at.strftime('%Y/%m/%d/%M:%H') %></td>
    <td class="col-1">
    <%= link_to '削除', admin_post_comment_path(comment.post, comment), method: :delete, data: { confirm: '本当に削除しますか?' },class: "btn btn-sm btn-danger" %>
    </td>
  </tr>
<% end %>
</table>
</div>