<h1>Public::Homes#top</h1>
<% if player_signed_in? %>
  <div class="search_form">
    <%= form_with url: public_search_path, local: true, method: :get  do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, options_for_select([['player'], ['Post']]) %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
  
   <div class="search_form">
      <%= form_with url: public_search_path, local: true, method: :get  do |f| %>
      <%= f.text_field :word_tag %>
      <%= f.submit "タグ検索", class: "btn btn-primary" %>
    <% end %>
   </div>
  <%=link_to "グループを作成する",new_public_group_path %> |
  <%=link_to "グループ一覧",public_groups_path %>
<% end %>
