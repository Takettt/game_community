<div class="container">
  <h2 class="text-center"><%= @group.name %></h2>
  <h4 class="text-center">承認待ち一覧</h4>

  <div class="row mt-5">
    <div class="col-11 col-md-12 mx-auto">
    <% if @approval.present? %>
      <div class="table-responsive">
        <table class="table">
          <thead class="table-light">
            <tr>
              <th>ニックネーム</th>
              <th>合言葉</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @approval.each do |approval| %>
              <tr class="table-light">
                <td><%= link_to approval.player.nickname, public_player_path(approval.player.id), class: "text-dark" %></td>
                <td>
                    <%= approval.group_password %>
                </td>
                <td class="text-right">
                  <%= render "layouts/button/green_button", green_btn: "group-approval", group: @group, approval: @approval %>
                  <%= render "layouts/button/red_button", red_btn: "group-approval-reject", group: @group, approval: @approval %>
                </td>
            <% end %>
              </tr>
          </tbody>
        </table>
      </div>
    <% else %>
      <P class="text-center">承認待ちユーザーはいません。</P>
    <% end %>
    </div>

  </div>

  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
    <p class="text-center"><%= link_to "戻る", public_group_path(@group), class: 'text-dark font-weight-bold' %></p>
    </div>
  </div>

</div>