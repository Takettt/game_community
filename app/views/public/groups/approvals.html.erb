<div class="container">
  <h2 class="text-center"><%= @group.name %></h2>
  <h4 class="text-center">承認待ち一覧</h4>

  <div class="row mt-5">
    <div class="col-11 col-md-12 mx-auto">
    <% if @approval.present? %>
      <div class="table-responsive">
         <%= form_with model:@approval, url: public_group_path(@group) do |f| %>
        <table class="table table-hover text-nowrap bg-light">
          <thead class="thead-dark">
            <tr>
              <th>ニックネーム</th>
              <th>合言葉</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @approval.each do |approval| %>
              <tr>
                <td><%= link_to approval.player.last_name + approval.player.first_name, public_player_path(approval.player.id), class: "text-dark" %></td>
                <td>
                    <%= approval.group_password %>
                </td>
                <td class="text-right">
                  <%= link_to '加入許可', public_group_group_players_path(@group, approval_id: approval.id), method: :post, class: "btn btn-sm btn-success" %>
                </td>
              
              
                
                 <td><%= f.select :group_approval, options_for_select([["申請中","applying"], ["承認","approval"],  ["却下","rejected"]]) %>

            <% end %>
            <% end %>
              
              </tr>
          </tbody>
        </table>
      </div>
    <% else %>
      <P class="text-center">承認待ちユーザーはいません。</P>
    <% end %>
    </div>
   
  </div>

  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
    <p class="text-center"><%= link_to "戻る", public_group_path(@group), class: 'text-dark font-weight-bold' %></p>
    </div>
  </div>

</div>