<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h1 class="text-center mt-5 mb-5">グループ一覧</h1>
      <table class='table'>
        <thead>
          <tr class="table-light">
            <th class="col-2"></th>
            <th class="col-3">グループ名</th>
            <th class="col-4">紹介文</th>
            <th class="col-3"></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr class="table-light">
              <td>
                <% if group.group_image.attached? %>
                  <%= image_tag group.group_image,size:"100x100" %>
                <% else %>
                  <%= image_tag 'no_image', size: "100x100" %>
                <% end %>
              </td>
              <td><%= group.name %></td>
              <td><%= group.introduction %></td>
              <td><%= link_to 'グループ詳細', public_group_path(group), class: "group_#{group.id} btn btn-sm btn-success" %> </td>
            </tr>
          <% end %>
        </tbody>
      </table> 
    </div>
  </div>
</div>