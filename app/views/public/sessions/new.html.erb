<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
    <h4 class="m-5 text-center">ログイン</h4>

<%= form_for(resource, as: resource_name, url: player_session_path) do |f| %>

    <div class="form-group text-center">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control"%>
    </div>

    <div class="form-group text-center">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" ,class:"form-control"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group text-center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="form-group text-center">
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>

   <div class="form-group text-center">
    <div class="actions">
        <h4 class="mb-5 mt-5 mr-4">会員登録がお済でない方</h4>
         <h5><%= render "public/shared/links" %></h5>
      </div>
   </div>
 <% end %>
 </div>
 </div>
 </div>