<div class='col-md-8 offset-md-1'>
<h1>確認画面</h1>
<%= form_with model: @post, url:public_posts_path, method: :post, class: 'post_confirm' do |f| %>
<table class='table table-borderless'>
  <tr>
    <th>ゲーム名</th>
    <td><%= f.text_field :game_name ,value: @post.game_name, readonly: true  %></td>
  </tr>

  <tr>
    <th>募集人数</th>
    <td><%= f.text_field :participate_number, valule: @post.participate_number, readonly: true %></td>
  </tr>

  <tr>
    <th>始める時間</th>
    <td><%= f.text_field :start_time, value: @post.start_time.strftime('%Y/%m/%d'), readonly: true %></td>
  </tr>

  <tr>
    <th>終わる時間</th>
    <td><%= f.text_field :ending_time, valule: @post.ending_time.strftime('%Y/%m/%d'), readonly: true %></td>
  </tr>

  <tr>
    <th>今日のテンション</th>
    <td><%= f.text_field :today_tension, value: @post.today_tension, readonly: true %></td>
  </tr>

  <tr>
    <th>ひとこと</th>
    <td><%= f.text_field :content, value:  @post.content, readonly: true %></td>
  </tr>
</table>

 <%= f.submit "確定", class: 'btn btn-info' %>
<% end %>